<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_activity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009FE5"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ln_splash_scr_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:transitionName="logo_linear">

        <ImageView
            android:id="@+id/img_splash_scr_logo"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:transitionName="logo_image"
            app:srcCompat="@drawable/logo_vlu" />

        <ImageView
            android:id="@+id/img_splash_scr_name"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:transitionName="logo_name"
            app:srcCompat="@drawable/name" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_splash_scr_sologan"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/ln_splash_scr_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:transitionName="logo_sologan"
        app:srcCompat="@drawable/sologan" />

</RelativeLayout>