<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainDetailProduct">

    <TextView
        android:id="@+id/ednoidung"
        android:layout_width="373dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mota" />

    <Button
        android:id="@+id/giohang"
        android:layout_width="138dp"
        android:layout_height="71dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="13dp"
        android:text="Add to cart"
        app:layout_constraintStart_toEndOf="@+id/cancelbtn"
        app:layout_constraintTop_toBottomOf="@+id/edsoluong" />

    <TextView
        android:id="@+id/mota"
        android:layout_width="146dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:text="Description"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giatien" />

    <TextView
        android:id="@+id/giatien"
        android:layout_width="122dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Price"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edsanpham" />

    <ImageView
        android:id="@+id/d_imageView"
        android:layout_width="403dp"
        android:layout_height="237dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/sanpham"
        android:layout_width="123dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_imageView" />

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="138dp"
        android:layout_height="71dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="13dp"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edsoluong" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="106dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:text="Quantity"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ednoidung" />

    <TextView
        android:id="@+id/edsanpham"
        android:layout_width="373dp"
        android:layout_height="52dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="13dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sanpham" />

    <TextView
        android:id="@+id/edgiatien"
        android:layout_width="235dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/giatien"
        app:layout_constraintTop_toBottomOf="@+id/edsanpham" />

    <EditText
        android:id="@+id/edsoluong"
        android:layout_width="192dp"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/quantity"
        app:layout_constraintTop_toBottomOf="@+id/ednoidung" />

</androidx.constraintlayout.widget.ConstraintLayout>